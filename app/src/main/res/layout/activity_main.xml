<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLayout_1_IDXML"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_1_ActivityMain_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="Button_MainActivity_KetikaDipijit"
        android:text="@string/B_1_ActivityMain_IDXML" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_2_ActivityMain_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/B_1_ActivityMain_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="Button_MainActivity_KetikaDipijit"
        android:text="@string/B_2_ActivityMain_IDXML" />

    <fragment
        android:id="@+id/Fragment_IDXML"
        android:name="com.rk.zz_fragments__jvm.FragmentSatu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/B_2_ActivityMain_IDXML"
        android:layout_marginTop="10dp" />


</RelativeLayout>